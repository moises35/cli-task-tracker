{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ES6",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "baseUrl": "./",
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "exclude": [ "node_modules" ],
  "include": [
    "src/**/*",
  ]
}
